    <input type="checkbox" id="menu" class="cont-inp">
    <div class="container-menu">
        <div class="cont-menu">
            <nav>
                <a href="/">Cubiertos<i class='bx bx-chevron-right '></i></a></li>
                <a href="/">Vajilla<i class='bx bx-chevron-right '></i></a></li>
                <a href="/">Cristalería<i class='bx bx-chevron-right '></i></a></li>
                <a href="/">Café y Té<i class='bx bx-chevron-right '></i></a></li>
               
            </nav>
            
            <label for="menu" ><i class="fas fa-times"></i></label>
        </div>
    </div>
</div>
